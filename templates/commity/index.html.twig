{% extends 'base.html.twig' %}

{% block title %}Departement Sante{% endblock %}

{% block content %}
<div id="content">
    <div id="content-header">
        <div id="breadcrumb"> <a href="#" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Accueil</a> <a href="#" class="current">Santé</a> </div>

        </div>
        <div class="container-fluid">
        <hr>
        <div class="row-fluid">
            <div class="span12">
                <div class="widget-box">
                    <div class="widget-title"> <span class="icon"><i class="icon-th"></i></span>
                        <h5 class="pull-left">{{app.request.get('situation')}}</h5>
                        <span class="btn btn-primary pull-right"><a href="{{ path('app_dashboard_commity_create') }}"><i class="icon-plus"></i> Ajouter {{app.request.get('situation')}}</a></span>
                    </div>
                    <div class="widget-content nopadding">
                        <table class="table table-bordered data-table">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Nom de Famille</th>
                                    <th>Prenom de Famille</th>
                                    <th>Sexe</th>
                                    <th>Date de Naissance</th>
                                    <th>Lieu de Naissance</th>
                                    <th>Nationalite</th>
                                    <th>Document Voyage</th>
                                    <th>Numero Passport</th>
                                    <th>Numero Cin</th>
                                    <th>Situation Marital</th>
                                    <th>Situation Familliale</th>
                                    <th>Numero Phone</th>
                                    <th>Adresse Email</th>
                                    <th>Photo</th>
                                    <th>actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for commity in commities %}
                                <tr>
                                    <td>{{ commity.id }}</td>
                                    <td>{{ commity.nomFamille }}</td>
                                    <td>{{ commity.prenomFamille }}</td>
                                    <td>{{ commity.sexe }}</td>
                                    <td>{{ commity.dateNaissance ? commity.dateNaissance|date('Y-m-d') : '' }}</td>
                                    <td>{{ commity.lieuNaissance }}</td>
                                    <td>{{ commity.nationalite }}</td>
                                    <td>{{ commity.documentVoyage|join(', ') }}</td>
                                    <td>{{ commity.numeroPassport }}</td>
                                    <td>{{ commity.numeroCin }}</td>
                                    <td>{{ commity.situationMarital }}</td>
                                    <td>{{ commity.situationFamiliale }}</td>
                                    <td>{{ commity.numeroPhone }}</td>
                                    <td>{{ commity.adresseEmail }}</td>
                                    <td><img src="{{'/uploads/avatar/personne/'~ commity.image}}" width="40" height="40" class="rounded thumbnail"></td>
                                    <td>
                                        <a onClick="showOpen('{{ path('app_dashboard_commity_show', {'id': commity.id}) }}', '{{commity.id}}')" data-toggle="modal" data-target="#popUpWindow"><i class="icon-eye-open"></i></a>
                                        <a href="{{ path('app_dashboard_commity_edit', {'id': commity.id}) }}"><i class="icon-edit"></i></a>
                                        <a href="{{ path('app_dashboard_commity_delete', {'id': commity.id}) }}" onClick="confirm('Etes vous sûre ?')"><i class="icon-trash"></i></a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="15">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{# modal #}
<div class="modal hide" id="popUpWindow">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button class="close" data-dismiss="modal">&times;</button>
                <h3>Add a new event</h3>
            </div>
            <div class="modal-body" id="contentModal"></div>
            <div class="modal-footer">
                <button class="btn pull-right" data-dismiss="modal">Annuler</button>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script src="{{ asset('js/jquery.min.js') }}"></script> 
<script src="{{ asset('js/matrix.tables.js') }}"></script>
<script>
    function showOpen(path, id){
        $.ajax({
            type: "POST",
            url: path,
            data:{ id : id},
            success: function(data){
                console.log(data)
                html = `
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <td>Données</td>
                                <td>Valeurs</td>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Nom de Famille</td>
                                <td>${data.nomFamille}</td>
                            </tr>
                            <tr>
                                <td>Prénom de Famille</td>
                                <td>${data.prenomFamille}</td>
                            </tr>
                            <tr>
                                <td>Sexe</td>
                                <td>${data.sexe}</td>
                            </tr>
                            <tr>
                                <td>Situation Familliale</td>
                                <td>${data.situationFamiliale}</td>
                            </tr>
                            <tr>
                                <td>Situation Maritale</td>
                                <td>${data.situationMarital}</td>
                            </tr>
                            <tr>
                                <td>Lieu de naissance</td>
                                <td>${data.lieuNaissance}</td>
                            </tr>
                            <tr>
                                <td>Date de naissance</td>
                                <td>${data.dateNaissance}</td>
                            </tr>
                            <tr>
                                <td>Nationalité</td>
                                <td>${data.nationalite}</td>
                            </tr>
                            <tr>
                                <td>Document de voyage</td>
                                <td>${data.documentVoyage}</td>
                            </tr>
                            <tr>
                                <td>Numéro de passeport</td>
                                <td>${data.numeroPassport}</td>
                            </tr>
                            <tr>
                                <td>Adresse email</td>
                                <td>${data.adresseEmail}</td>
                            </tr>
                            <tr>
                                <td>Numéro de téléphone</td>
                                <td>${data.numeroPhone}</td>
                            </tr>
                            <tr>
                                <td>Photo</td>
                                <td>
                                    <img src="uploads/avatar/personne/${data.imageFile}" alt="Photo" />
                                </td>
                            </tr>
                        </tbody>
                    </table>
                `
                $("#contentModal").html(html);
            }
        })
    }

</script>
{% endblock %}
