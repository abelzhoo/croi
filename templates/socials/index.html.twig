{% extends 'base.html.twig' %}

{% block title %}Departement Sante{% endblock %}


{% block content %}
<div id="content">
    <div id="content-header">
        <div id="breadcrumb"> <a href="#" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Accueil</a> <a href="#" class="current">Social</a> </div>
            <h1>DEPARTEMENT SOCIAL</h1>
        </div>
        <div class="container-fluid">
        <hr>
        <div class="row-fluid">
            <div class="span12">
                <div class="widget-box">
                    <div class="widget-title"> <span class="icon"><i class="icon-th"></i></span>
                        <h5 class="pull-left">social</h5>
                    </div>
                    <div class="widget-content nopadding">
                        <table class="table table-bordered data-table">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Aide Nourriture</th>
                                    <th>Aide Education</th>
                                    <th>Aide Social</th>
                                    <th>Aide Sante</th>
                                    <th>Aide Travail</th>
                                    <th>actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for social in socials %}
                                <tr>
                                    <td>{{ social.id }}</td>
                                    <td>{{ social.aideNourriture}}</td>
                                    <td>{{ social.aideEducation}}</td>
                                    <td>{{ social.aideSocial}}</td>
                                    <td>{{ social.aideSante }}</td>
                                    <td>{{ social.aideTravail}}</td>
                                    <td>
                                        <a onClick="showOpen('{{ path('app_dashboard_social_show', {'id': social.id}) }}', '{{social.id}}')" data-toggle="modal" data-target="#popUpWindow"><i class="icon-eye-open"></i></a>
                                        <a href="{{ path('app_dashboard_social_edit', {'id': social.id}) }}"><i class="icon-edit"></i></a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="7">Pas de donnée</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{# modal #}
<div class="modal hide" id="popUpWindow">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button class="close" data-dismiss="modal">&times;</button>
                <h3>Add a new event</h3>
            </div>
            <div class="modal-body" id="contentModal"></div>
            <div class="modal-footer">
                <button class="btn pull-right" data-dismiss="modal">Annuler</button>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script src="{{ asset('js/jquery.min.js') }}"></script> 
<script src="{{ asset('js/matrix.tables.js') }}"></script>
<script>
    function showOpen(path, id){
        console.log(path, 'id',id)
        $.ajax({
            type: "POST",
            url: path,
            data:{ id : id},
            success: function(data){
                html = `
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <td>Données</td>
                                <td>Valeurs</td>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Aide Education</td>
                                <td>${data.aideEducation}</td>
                            </tr>
                            <tr>
                                <td>Aide Nourriture</td>
                                <td>${data.aideNourriture}</td>
                            </tr>
                            <tr>
                                <td>Aide Social</td>
                                <td>${data.aideSocial}</td>
                            </tr>
                            <tr>
                                <td>Aide Santé</td>
                                <td>${data.aideSante}</td>
                            </tr>
                            <tr>
                                <td>Aide Travail</td>
                                <td>${data.aideTravail}</td>
                            </tr>
                        </tbody>
                    </table>
                `
                $("#contentModal").html(html);
            }
        })
    }
</script>
{% endblock %}