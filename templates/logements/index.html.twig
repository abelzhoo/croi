{% extends 'base.html.twig' %}

{% block title %}Departement Sante{% endblock %}


{% block content %}
<div id="content">
    <div id="content-header">
        <div id="breadcrumb"> <a href="#" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Accueil</a> <a href="#" class="current">Logement</a> </div>
            <h1>DEPARTEMENT LOGEMENT</h1>
        </div>
        <div class="container-fluid">
        <hr>
        <div class="row-fluid">
            <div class="span12">
                <div class="widget-box">
                    <div class="widget-title"> <span class="icon"><i class="icon-th"></i></span>
                        <h5 class="pull-left">logement</h5>
                    </div>
                    <div class="widget-content nopadding">
                        <table class="table table-bordered data-table">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>AdressePermanente</th>
                                    <th>AdresseTemporaire</th>
                                    <th>NomPays</th>
                                    <th>Province</th>
                                    <th>MontantLoyer</th>
                                    <th>MontantSyndic</th>
                                    <th>actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for logement in logements %}
                                <tr>
                                    <td>{{ logement.id }}</td>
                                    <td>{{ logement.adressePermanente }}</td>
                                    <td>{{ logement.adresseTemporaire }}</td>
                                    <td>{{ logement.nomPays }}</td>
                                    <td>{{ logement.province }}</td>
                                    <td>{{ logement.montantLoyer }}</td>
                                    <td>{{ logement.montantSyndic }}</td>
                                    <td>
                                        <a href="{{ path('app_dashboard_logement_show', {'id': logement.id}) }}" data-toggle="modal" data-target="#popUpWindow"><i class="icon-eye-open"></i></a>
                                        <a href="{{ path('app_dashboard_logement_edit', {'id': logement.id}) }}"><i class="icon-edit"></i></a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="10">Pas de donn√©e</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
<script src="{{ asset('js/jquery.min.js') }}"></script> 
<script src="{{ asset('js/matrix.tables.js') }}"></script>
{% endblock %}

{% block modal %}
    {{ include('logements/_modal.html.twig') }}
{% endblock %}