{% extends 'base.html.twig' %}

{% block title %}Departement Sante{% endblock %}

{% block content %}
<div id="content">
    <div id="content-header">
        <div id="breadcrumb"> <a href="#" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Accueil</a> <a href="#" class="current">Santé</a> </div>
            <h1>DEPARTEMENT EDUCATION</h1>
        </div>
        <div class="container-fluid">
        <hr>
        <div class="row-fluid">
            <div class="span12">
                <div class="widget-box">
                    <div class="widget-title"> <span class="icon"><i class="icon-th"></i></span>
                        <h5 class="pull-left">Education</h5>
                    </div>
                    <div class="widget-content nopadding">
                        <table class="table table-bordered data-table">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>NomEcole</th>
                                    <th>NomUniversite</th>
                                    <th>Classe</th>
                                    <th>CarteEtudiant</th>
                                    <th>AdresseEcole</th>
                                    <th>AdresseUniversite</th>
                                    <th>Diplome</th>
                                    <th>AnneeScolaire</th>
                                    <th>NomPays</th>
                                    <th>Province</th>
                                    <th>NiveauEtude</th>
                                    <th>Aide Education ?</th>
                                    <th>Etudiant</th>
                                    <th>actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for education in educations %}
                                <tr>
                                    <td>{{ education.id }}</td>
                                    <td>{{ education.nomEcole }}</td>
                                    <td>{{ education.nomUniversite }}</td>
                                    <td>{{ education.classe }}</td>
                                    <td>{{ education.carteEtudiant }}</td>
                                    <td>{{ education.adresseEcole }}</td>
                                    <td>{{ education.adresseUniversite }}</td>
                                    <td>{{ education.diplome }}</td>
                                    <td>{{ education.anneeScolaire|date('Y-m-d') }}</td>
                                    <td>{{ education.nomPays ? education.nomPays|join(', ') : '' }}</td>
                                    <td>{{ education.province ? education.province|join(', ') : '' }}</td>
                                    <td>{{ education.niveauEtude }}</td>
                                    <td>{{ education.aideEducation }}</td>
                                    <td>{{ dump(education.commity) }}</td>
                                    <td>
                                        <a onClick="showOpen('{{ path('app_dashboard_education_show', {'id': education.id}) }}', '{{education.id}}')" data-toggle="modal" data-target="#popUpWindow"><i class="icon-eye-open"></i></a>
                                        <a href="{{ path('app_dashboard_education_edit', {'id': education.id}) }}"><i class="icon-edit"></i></a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="17">Pas de donnée</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{# modal #}
<div class="modal hide" id="popUpWindow">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button class="close" data-dismiss="modal">&times;</button>
                <h3>Add a new event</h3>
            </div>
            <div class="modal-body" id="contentModal"></div>
            <div class="modal-footer">
                <button class="btn pull-right" data-dismiss="modal">Annuler</button>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
<script src="{{ asset('js/jquery.min.js') }}"></script> 
<script src="{{ asset('js/matrix.tables.js') }}"></script>
<script>
    function showOpen(path, id){
        console.log(path, 'id',id)
        $.ajax({
            type: "POST",
            url: path,
            data:{ id : id},
            success: function(data){
                html = `
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <td>Données</td>
                                <td>Valeurs</td>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Nom de l'école</td>
                                <td>${data.nomEcole}</td>
                            </tr>
                            <tr>
                                <td>Nom de l'université</td>
                                <td>${data.nomUniversite}</td>
                            </tr>
                            <tr>
                                <td>Classe</td>
                                <td>${data.classe}</td>
                            </tr>
                            <tr>
                                <td>Carte de l'étudiant</td>
                                <td>${data.carteEtudiant}</td>
                            </tr>
                            <tr>
                                <td>Adresse de l'école</td>
                                <td>${data.adresseEcole}</td>
                            </tr>
                            <tr>
                                <td>Adresse de l'université</td>
                                <td>${data.adresseUniversite}</td>
                            </tr>
                            <tr>
                                <td>Diplôme</td>
                                <td>${data.diplome}</td>
                            </tr>
                            <tr>
                                <td>Année Scolaire</td>
                                <td>${data.anneeScolaire}</td>
                            </tr>
                            <tr>
                                <td>Niveau d'étude</td>
                                <td>${data.niveauEtude}</td>
                            </tr>
                            <tr>
                                <td>Aide Education par CROI ?</td>
                                <td>${data.aideEducation}</td>
                            </tr>
                            <tr>
                                <td>Pays</td>
                                <td>${data.nomPays}</td>
                            </tr>
                            <tr>
                                <td>Province</td>
                                <td>${data.province}</td>
                            </tr>
                        </tbody>
                    </table>
                `
                $("#contentModal").html(html);
            }
        })
    }
</script>

{% endblock %}