{% extends 'base.html.twig' %}

{% block title %}Departement Sante{% endblock %}

{% block content %}
<div id="content">
    <div id="content-header">
        <div id="breadcrumb"> <a href="#" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Accueil</a> <a href="#" class="current">Santé</a> </div>
            <h1>DEPARTEMENT SANTE</h1>
        </div>
        <div class="container-fluid">
        <hr>
        <div class="row-fluid">
            <div class="span12">
                <div class="widget-box">
                    <div class="widget-title"> <span class="icon"><i class="icon-th"></i></span>
                        <h5 class="pull-left">santé</h5>
                    </div>
                    <div class="widget-content nopadding">
                        <table class="table table-bordered data-table">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Groupe Sanguin</th>
                                    <th>Etat</th>
                                    <th>Maladie Chronique</th>
                                    <th>Tailles</th>
                                    <th>Poids</th>
                                    <th>Intervention</th>
                                    <th>Pays Chirurgie</th>
                                    <th>Nom de Medicament</th>
                                    <th>Maladie Relative</th>
                                    <th>Limite de Santé</th>
                                    <th>Limite de Temps</th>
                                    <th>Chirurgie</th>
                                    <th>Chose Porter</th>
                                    <th>Prix d'Intervention</th>
                                    <th>Traitement Medical</th>
                                    <th>Fréquence de Maladie</th>
                                    <th>actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for sante in santes %}
                                <tr class="gradeX">
                                    <td>{{ sante.id }}</td>
                                    <td>{{ sante.groupeSanguin }}</td>
                                    <td>{{ sante.etat ? 'OUI' : 'NON' }}</td>
                                    <td>{{ sante.maladieChronique ? 'OUI' : 'NON' }}</td>
                                    <td>{{ sante.tailles }}</td>
                                    <td>{{ sante.poids }}</td>
                                    <td>{{ sante.intervention }}</td>
                                    <td>{{ sante.paysChirurgie }}</td>
                                    <td>{{ sante.nomMedicament }}</td>
                                    <td>{{ sante.maladieRelative }}</td>
                                    <td>{{ sante.limiteSante }}</td>
                                    <td>{{ sante.tempsLimite }}</td>
                                    <td>{{ sante.chirurgie }}</td>
                                    <td>{{ sante.objetPorte }}</td>
                                    <td>{{ sante.prixIntervention }}</td>
                                    <td>{{ sante.traitementMedical }}</td>
                                    <td>{{ sante.frequenceMaladie }}</td>
                                    <td>
                                        <a onClick="showModalId('{{sante.id}}', '{{ path('app_dashboard_show_sante', {'id': sante.id}) }}')" data-toggle="modal" data-target="#popUpWindow"><i class="icon-eye-open"></i></a>
                                        <a href="{{ path('app_dashboard_edit_sante', {'id': sante.id}) }}"><i class="icon-edit"></i></a>
                                    </td>
                                </tr>
                            {% else %}
                            <tr>
                                <td colspan="22">Pas de donnée</td>
                            </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
<script src="{{ asset('js/jquery.min.js') }}"></script> 
<script src="{{ asset('js/matrix.tables.js') }}"></script>
<script>
    function showModalId(id, pathRoot){
        console.log(id)
        $.ajax({
            type: "POST",
            url: pathRoot,
            data:{ id : id},
            success: function(data){
                console.log(data)
            }
        })
    }
</script>
{% endblock %}

{% block modal %}
    {{ include('santes/_modal.html.twig') }}
{% endblock %}